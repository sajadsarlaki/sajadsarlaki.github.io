---
import { educationContent } from "../data/data.json";
import Animat from "./Animat.astro";
import SectionTitle from "./SectionTitle.astro";
---

<section id="education" itemscope itemtype="https://schema.org/EducationEvent">
  {
    educationContent.degrees.map((degree, index) => (
      <div class="education h-event">
        <Animat class="education-desc" animationName="fadeIn-from-left">
          <div class="education-content">
            <img
              class="institution-icon"
              src={degree.imgs.institution_icon}
              alt="Icon of Amirkabir University of Technology"
            />
            <h2 class="title" itemprop="name">
              {degree.degree}
            </h2>
            <h3 itemprop="location">
              {degree.institution}{" "}
              <span itemprop="startDate">{degree.year.split("-")[0]}</span> -
              <span itemprop="endDate">{degree.year.split("-")[1]}</span>
            </h3>
            <ul class="education-desc-list">
              {degree.description.map((item) => (
                <li>{item}</li>
              ))}
            </ul>
            {degree.hyperlinks && (
              <ul class="education-links">
                {degree.hyperlinks.map((item) => (
                  <li>
                    {item.title}:
                    <a
                      href={item.url}
                      target="_blank"
                      rel="noopener noreferrer"
                      class="education-link"
                      itemprop="url"
                    >
                      {item.name}
                    </a>
                  </li>
                ))}
              </ul>
            )}
          </div>
        </Animat>
        <Animat
          class="banner-imgs"
          delay="200"
          animationName="fadeIn-from-left"
        >
          <img
            src={degree.imgs.banner}
            alt="A photo of Amirkabir University of Technology"
            class="banner-img"
            loading="lazy"
          />
        </Animat>
      </div>
    ))
  }

  <!-- <SectionTitle
    text="hobbies"
    color="var(--light-purple-color)"
    hrefLink="#hobbies"
  /> -->
</section>
<style>
  #education {
    position: relative;
    flex-direction: column;
    display: flex;
    align-items: center;
    justify-content: space-around;
    overflow: hidden;
  }
  .education {
    width: 90%;
    display: flex;
    align-items: center;
    justify-content: space-around;
  }
  .education-desc {
    font-weight: 100;
    font-size: 1.5rem;
    line-height: 2.5rem;
  }
  .education-desc h2 {
    font-family: var(--second-font-family);
    margin: 0;
    line-height: 1.5rem;
    color: var(--blue-color);
  }
  .education-desc h3 {
    margin: 0.65rem 0;
  }
  .education-desc-list {
    list-style-type: none;
    margin: 0 ;
    padding: 0;
    line-height: 1.5rem;
  }

  .grad {
    position: absolute;
    top: -3rem;
    left: 0.75rem;
    transform: scale(1.15);
  }

  .banner-img {
    width: 35vw;
    height: auto;
    border-radius: 0.5rem;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s ease;
  }
  .institution-icon {
    width: 5rem;
    height: auto;
    border-radius: 0.5rem;
  }
  .education-links {
    list-style: none;
    margin: 0.75rem 0;
    padding: 0;
    font-size: 1.1rem;
    line-height: 1.7rem;
    display: flex;
    flex-direction: column;
    gap: 0.4rem;
  }

  .education-links li {
    display: flex;
    align-items: center;
    color: var(--text-color, #222);
    background: transparent;
    
    transition: background 0.2s;
    margin: -.25rem 0;
  }

 

  .education-link {
    color: var(--blue-color);
    font-weight: 500;
    text-decoration: underline dotted;
    transition: color 0.2s, text-decoration-thickness 0.2s;
    margin-left: 0.4rem;
    word-break: break-all;
  }

  .education-link:hover,
  .education-link:focus {
    color: var(--blue-color);
    text-decoration-thickness: 2.5px;
    outline: none;
  }

  /* --------------------------------------------------------------------          Responsive         ------------------------------------------------------------------ */



  @media (max-width: 768px) {
    #education{
      gap: 2rem;
      align-items: center;
      justify-content: center;
    }
    .education{
      display: flex;
      justify-content: center;
      align-items: center;
      margin: 0;
      padding: 0;
    }
    .education-content{
    background-color: #1d1e24;
    padding: 1.5rem 1rem;
    min-height: 30vh;
    display: flex;
    flex-direction: column;
    }
    .institution-icon{
      /* align-self: center; */
    }
    .banner-img{
      display: none;
    }
    .education .title{
      font-size: 1.2rem;
    }
    .education-desc {
      font-size: 1.2rem;
      line-height: 2rem;
    }
    .education-desc h3 {
      font-size: 1rem;
    }
    .education-desc-list {
      font-size: 0.9rem;
    }
    .education-img {
      width: 5%;
    }
    .education-links {
      font-size: 1rem;
      gap: 0.25rem;
    }
    .education-links li {
      padding: 0.15rem 0.4rem;
    }
  }

  @media (max-width: 480px) {
      .education-content{
        min-width: 80vw;
      }
    .education-desc {
      font-size: 1rem;
      line-height: 1.5rem;
    }
    .education-desc h3 {
      font-size: 0.8rem;
    }
    .education-desc-list {
      font-size: 0.8rem;
    }
    .banner-img {
      display: none;
    }
    .education-links {
      font-size: 0.95rem;
    }
  }
</style>
