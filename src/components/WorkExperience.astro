---
import { workExperienceContent } from "../data/data.json";
import SectionTitle from "./SectionTitle.astro";
import Animate from "./Animat.astro"
---

<section id="work">
  <!-- <h2>{workExperienceContent.title}</h2> -->
  <ul class="list-container">

    {
      workExperienceContent.jobs.map((job, index) => {return(
        <Animate delay={2*index+'00'} class="work-item" animationName="fadeIn-from-left">
        <li>
            <img class="job-icon" src={job.icon} alt="" />
              <h2>{job.position}</h2>
              <strong>{job.company} </strong>({job.year})
              <br />
              <ul class="desc-list">
                {job.desc.map((item) => (
                  <li class="desc-item">{item}</li>
                  ))}
                  </ul>
                  </li>
      </Animate>
   ) })
    }
  </ul>
  <SectionTitle text="Skills" color="var(--orange-color)" hrefLink="#skills" />
  <div class="line"></div>
</section>

<style>
  #work {
    position: relative;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: auto;
  }
  .list-container {
    all: unset;
    flex: 1;
    display: flex;
    justify-content: space-around;
    max-width: 92%;
    list-style-type: none;
  }
  
  .work-item{
    display: flex;
    flex-direction: column;
    min-height: 25vh;
    overflow: hidden;
    width: 25%;
    position: relative;
    border-radius: 0.5rem;
    padding: 1%;
    font-size: 1.2rem;
    background-color: #222;
    padding: 2rem;
    background: linear-gradient(#12181b, #12181b) padding-box,
      linear-gradient(to right, #f55, #88f) border-box;
    border-radius: 0.5rem;
    border: 4px solid transparent;
    line-height: 1.5rem;
  }

  .job-icon {
    width: 4rem;
    position: absolute;
    right: 0;
  }

  .desc-list {
    line-height: 1.7rem;
    font-size: 1.1rem;
  }
  /* --------------------------------------------------------------------          Responsive         ------------------------------------------------------------------ */
  /* ... existing styles ... */

  /* Responsive styles */
  @media (max-width: 576px) {
    .list-container {
      flex-direction: column;
      align-items: center;
    }

    .work-item {
      width: 70%;
      margin-bottom: 2rem;
    }
    .title {
      font-size: 3rem;
    }
  }

  @media (min-width: 577px) and (max-width: 768px) {
    .list-container {
      flex-wrap: wrap;
    }

    .work-item {
      width: 60%;
      margin-bottom: 2rem;
    }
  }

  @media (min-width: 769px) and (max-width: 992px) {
    .list-container {
      flex-wrap: wrap;
    }

    .work-item {
      width: 32%;
      margin-bottom: 2rem;
    }
  }

  /* ... existing styles ... */
</style>

